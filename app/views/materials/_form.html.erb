<div class="row">
  <div class=col-lg-12>
    <div class="card p-5">
      <%= form_with(model: material) do |form| %>
        <% if material.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>
            <ul>
              <% material.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class= "form-group">
          <%= form.label :name, style: "display: block" %>
          <%= form.text_field :name, class:"form-control" %>
        </div>
        <div class= "form-group">
          <%= form.label :description, style: "display: block" %>
          <%= form.text_field :description, class:"form-control" %>
        </div>
        <div class= "form-group">
          <%= form.label :quantity, style: "display: block" %>
          <%= form.text_field :quantity, class:"form-control" %>
        </div>
        <div class= "form-group">
          <%= form.label :unit_price, style: "display: block" %>
          <%= form.text_field :unit_price, class:"form-control" %>
        </div>
        <div class= "form-group">
          <%= form.label :is_thread, style: "display: block" %>
          <%= form.check_box :is_thread %>
        </div>
        <div>
          <%= form.submit "Enviar", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
