<div class="row">
  <div class=col-lg-12>
    <div class="card p-5">
      <%= form_with(model: crochet) do |form| %>
        <% if crochet.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(crochet.errors.count, "error") %> prohibited this crochet from being saved:</h2>
            <ul>
              <% crochet.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form.collection_select :person_id, @people, :id, :name, class: 'form-control' %>
        <%= form.collection_select :product_id, @products, :id, :name_with_description, class: 'form-control' %>
        <div class= "form-group">
          <%= form.label :ending_price, style: "display: block" %>
          <%= form.number_field :ending_price,  class:"form-control" %>
        </div>
        <div class= "form-group">
          <%= form.label :sale, style: "display: block" %>
          <%= form.check_box :sale %>
        </div>
        <div>
          <%= form.submit "Enviar", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
