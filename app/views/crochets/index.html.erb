<h1 class="text-center">Listado de Tejidos</h1>
<a href=" <%= new_crochet_path %>" class="btn btn-primary btn-icon-split">
  <span class="icon text-white-50">
    <i class="fas fa-plus"></i>
  </span>
  <span class="text">Crear tejido</span>
</a>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Total</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @crochets.each do |crochet| %>
      <tr>
        <td><%= crochet.id %></td>
        <td><%= crochet.sale %></td>
        <td><%= crochet.ending_price %></td>
        <td> <%= link_to "Detalles", crochet_path(crochet), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
