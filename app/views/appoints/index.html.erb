<h1 class="text-center">Listado de asignación de material</h1>
<a href=" <%= new_appoint_path %>" class="btn btn-primary btn-icon-split">
  <span class="icon text-white-50">
    <i class="fas fa-plus"></i>
  </span>
  <span class="text">Crear asignación</span>
</a>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Persona</th>
      <th>Material</th>
      <th>Cantidad</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @appoints.each do |appoint| %>
      <tr>
        <td><%= appoint.id %></td>
        <td><%= appoint.person.name %></td>
        <td><%= appoint.material.name_with_description %></td>
        <td><%= appoint.quantity %></td>
        <td> <%= link_to "Detalles", appoint_path(appoint), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
