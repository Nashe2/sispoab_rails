<div class="row">
  <div class=col-lg-12>
    <div class="card p-5">
      <%= form_with(model: appoint) do |form| %>
        <% if appoint.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(appoint.errors.count, "error") %> prohibited this appoint from being saved:</h2>
            <ul>
              <% appoint.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form.collection_select :person_id, @people, :id, :name, class: 'form-control' %>
        <%= form.collection_select :material_id, @materials, :id, :name_with_description, class: 'form-control' %>
        <div class= "form-group">
          <%= form.label :quantity, style: "display: block" %>
          <%= form.number_field :quantity,  class:"form-control" %>
        </div>
        <div class= "form-group">
          <%= form.submit "Enviar", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
