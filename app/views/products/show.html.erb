<div class="row">
  <div class="col-lg-12">
    <h1>Detalles de producto</h1>

    <br>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= link_to "Regresar al listado de productos", products_path, class:"btn btn-warning mb-2"%>
    <%= link_to "Editar producto", edit_product_path, class:"btn btn-primary mb-2" %>
    <%= link_to "Eliminar producto", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "¿Está seguro?"
                  }, class:"btn btn-danger mb-2"%>
    </div>

    <br>
    <div class="card">
      <table class="table">
        <tr>
          <td><b>Nombre del producto:</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Descripción:</b></td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td><b>Cantidad:</b></td>
          <td><%= @product.quantity %></td>
        </tr>
        <tr>
          <td><b>Fecha de creación:</b></td>
          <td><%= @product.created_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
