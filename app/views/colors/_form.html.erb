<div class="row">
  <div class=col-lg-12>
    <div class="card p-5">
      <%= form_with(model: color) do |form| %>
        <% if color.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(color.errors.count, "error") %> prohibited this color from being saved:</h2>
            <ul>
              <% color.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class= "form-group">
          <%= form.label :name, style: "display: block" %>
          <%= form.text_field :name, class:'form-control' %>
        </div>
        <div class= "form-group">
          <%= form.label :hex_code, style: "display: block" %>
          <%= form.color_field :hex_code, class:'form-control'%>
        </div>
        <div>
          <%= form.submit  "Enviar", class:'btn btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
